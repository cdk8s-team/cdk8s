    "projen": "^0.3.42",
    "standard-version": "^9.0.0",
    "typescript": "^3.9.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "json-schema": "^0.2.5",
    "jest": "^26.0.1",
    "@types/jest": "^26.0.7",
    "ts-jest": "^26.1.0",
    "@types/node": "^10.17.0",
    "jsii": "^1.7.0",
    "jsii-diff": "^1.7.0",
    "jsii-pacmak": "^1.7.0",
    "jsii-docgen": "^1.3.2"
  },
  "peerDependencies": {
    "constructs": "^2.0.2",
    "cdk8s": "^0.0.0"
  },
